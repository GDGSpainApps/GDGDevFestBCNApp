<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/text1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#fff"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="DevFest BCN 2013 - Version 1"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Code: https://github.com/GDGSpainApps/GDGDevFestBCNApp"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            android:color="#ccc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Original: https://code.google.com/p/iosched/"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            android:color="#ccc" />

     

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organizers"
            android:textSize="16sp"
            android:textStyle="bold" >
        </TextView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxHeight="80dp"
                android:maxWidth="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/gdgbcnlogosmall" >
            </ImageView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxHeight="80dp"
                android:maxWidth="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/gdglleidalogosmall" >
            </ImageView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxHeight="80dp"
                android:maxWidth="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/gdgtgnlogosmall" >
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxHeight="80dp"
                android:maxWidth="80dp"
                android:padding="10dip"
                android:scaleType="centerCrop"
                android:src="@drawable/gdgvigologosmall" >
            </ImageView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxHeight="90dp"
                android:maxWidth="90dp"
                android:padding="10dip"
                android:scaleType="centerCrop"
                android:src="@drawable/gdgvlclogosmall" >
            </ImageView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxHeight="90dp"
                android:maxWidth="90dp"
                android:padding="10dip"
                android:scaleType="centerCrop"
                android:src="@drawable/gdgmallorcalogsmall" >
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxHeight="80dp"
                android:maxWidth="80dp"
                android:padding="10dip"
                android:scaleType="centerCrop"
                android:src="@drawable/bmalogosmall" >
            </ImageView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxHeight="80dp"
                android:maxWidth="80dp"
                android:padding="10dip"
                android:scaleType="centerCrop"
                android:src="@drawable/fiberpartylogosmall" >
            </ImageView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxHeight="80dp"
                android:maxWidth="80dp"
                android:padding="10dip"
                android:scaleType="centerCrop"
                android:src="@drawable/bcnjuglogosmall" >
            </ImageView>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
